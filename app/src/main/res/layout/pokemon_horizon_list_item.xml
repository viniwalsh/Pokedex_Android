<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="12dp">
    <androidx.cardview.widget.CardView
        android:id="@+id/cad_view"
        app:cardCornerRadius="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#5959DC"
            android:padding="10dp">

            <TextView
                android:id="@+id/txt_pokemon_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/_001"
                android:textSize="24sp"

                />
            <TextView
                android:id="@+id/txt_pokemon_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/txt_pokemon_number"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:text="@string/bulbasar"
                android:textSize="24sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/pokemon_image"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:scaleType="fitXY"
                android:src="@drawable/ic_launcher_background" />


        </LinearLayout>

    </androidx.cardview.widget.CardView>
</RelativeLayout>